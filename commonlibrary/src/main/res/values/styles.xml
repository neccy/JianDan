<resources>

    <!--Application  Theme-->
    <style name="AppTheme" parent="QMUI.Compat.NoActionBar">

        <!--other-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="app_content_bg_color">@color/app_content_bg_color</item>
        <item name="android:splitMotionEvents">false</item>

        <!--Qmui-->
        <item name="qmui_config_color_blue">@color/app_color_blue</item>
        <item name="qmui_content_spacing_horizontal">20dp</item>
        <item name="qmui_content_padding_horizontal">
            @dimen/qmui_content_spacing_horizontal
        </item>

        <!--TopBar-->
        <item name="QMUITopBarStyle">@style/QDTopBar</item>
        <item name="qmui_topbar_height">@dimen/qmui_topbar_height</item>
        <item name="qmui_topbar_title_color">@color/app_config_color_white</item>
        <item name="qmui_topbar_title_text_size">@dimen/qmui_topbar_title_size</item>
        <item name="qmui_topbar_title_text_size_with_subtitle">
            @dimen/qmui_topbar_title_with_subtitle_size
        </item>
        <item name="qmui_topbar_title_margin_horizontal_when_no_btn_aside">
            @dimen/qmui_content_padding_horizontal
        </item>
        <item name="qmui_topbar_subtitle_text_size">
            @dimen/qmui_topbar_subtitle_size
        </item>
        <item name="qmui_topbar_subtitle_color">@color/qmui_config_color_gray_1</item>
        <item name="qmui_topbar_image_btn_width">@dimen/qmui_topbar_image_btn_width</item>
        <item name="qmui_topbar_image_btn_height">@dimen/qmui_topbar_image_btn_height</item>
        <item name="qmui_topbar_text_btn_padding_horizontal">
            @dimen/qmui_topbar_text_btn_padding_horizontal
        </item>
        <item name="qmui_topbar_text_btn_color_state_list">
            @color/app_config_color_white
        </item>
        <item name="qmui_topbar_text_btn_text_size">
            @dimen/qmui_topbar_text_btn_text_size
        </item>
    </style>

    <!--标题栏-->
    <style name="QDTopBar" parent="QMUI.TopBar">
        <item name="qmui_topbar_bg_color">?attr/colorPrimary</item>
    </style>

</resources>
